{
  "id": "com.amjdesk.AmjDesk",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "23.08",
  "sdk": "org.freedesktop.Sdk",
  "command": "amjdesk",
  "icon": "share/icons/hicolor/scalable/apps/amjdesk.svg",
  "modules": [
    "shared-modules/libappindicator/libappindicator-gtk3-12.10.json",
    "xdotool.json",
    {
      "name": "pam",    
      "buildsystem": "simple",
      "build-commands": [
          "./configure --disable-selinux --prefix=/app && make -j4 install"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/linux-pam/linux-pam/releases/download/v1.3.1/Linux-PAM-1.3.1.tar.xz",
          "sha256": "eff47a4ecd833fbf18de9686632a70ee8d0794b79aecb217ebd0ce11db4cd0db"
        }
      ]
    },
    {
      "name": "amjdesk",
      "buildsystem": "simple",
      "build-commands": [
        "bsdtar -zxvf amjdesk.deb",
        "tar -xvf ./data.tar.xz",
        "cp -r ./usr/*  /app/",
        "mkdir -p /app/bin && ln -s /app/lib/amjdesk/amjdesk /app/bin/amjdesk",
        "mv /app/share/applications/amjdesk.desktop /app/share/applications/com.amjdesk.AmjDesk.desktop",
        "mv /app/share/applications/amjdesk-link.desktop /app/share/applications/com.amjdesk.AmjDesk-link.desktop",
        "sed -i '/^Icon=/ c\\Icon=com.amjdesk.AmjDesk' /app/share/applications/*.desktop",
        "mv /app/share/icons/hicolor/scalable/apps/amjdesk.svg /app/share/icons/hicolor/scalable/apps/com.amjdesk.AmjDesk.svg",
        "for size in 16 24 32 48 64 128 256 512; do\n rsvg-convert -w $size -h $size -f png -o $size.png scalable.svg\n install -Dm644 $size.png /app/share/icons/hicolor/${size}x${size}/apps/com.amjdesk.AmjDesk.png\n done"
      ],
      "cleanup": ["/include", "/lib/pkgconfig", "/share/gtk-doc"],
      "sources": [
        {
          "type": "file",
          "path": "./amjdesk.deb"
        },
        {
          "type": "file",
          "path": "../res/scalable.svg"
        }
      ]
    }
  ],
  "finish-args": [
    "--share=ipc",
    "--socket=x11",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--share=network",
    "--filesystem=home",
    "--device=dri",
    "--socket=pulseaudio",
    "--talk-name=org.freedesktop.Flatpak"
  ]
}
