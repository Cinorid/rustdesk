pkgname=amjdesk
pkgver=1.2.6
pkgrel=0
epoch=
pkgdesc=""
arch=('x86_64')
url=""
license=('AGPL-3.0')
groups=()
depends=('gtk3' 'xdotool' 'libxcb' 'libxfixes' 'alsa-lib' 'libva' 'libvdpau' 'libappindicator-gtk3' 'pam' 'gst-plugins-base' 'gst-plugin-pipewire')
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=pacman_install
changelog=
noextract=()
md5sums=() #generate with 'makepkg -g'

package() {
  if [[ ${FLUTTER} ]]; then
	  mkdir -p "${pkgdir}/usr/lib/amjdesk" && cp -r ${HBB}/flutter/build/linux/x64/release/bundle/* -t "${pkgdir}/usr/lib/amjdesk"
  fi
  mkdir -p "${pkgdir}/usr/bin"
  pushd ${pkgdir} && ln -s /usr/lib/amjdesk/amjdesk usr/bin/amjdesk && popd
  install -Dm 644 $HBB/res/amjdesk.service -t "${pkgdir}/usr/share/amjdesk/files"
  install -Dm 644 $HBB/res/amjdesk.desktop -t "${pkgdir}/usr/share/amjdesk/files"
  install -Dm 644 $HBB/res/amjdesk-link.desktop -t "${pkgdir}/usr/share/amjdesk/files"
  install -Dm 644 $HBB/res/128x128@2x.png "${pkgdir}/usr/share/icons/hicolor/256x256/apps/amjdesk.png"
  install -Dm 644 $HBB/res/scalable.svg "${pkgdir}/usr/share/icons/hicolor/scalable/apps/amjdesk.svg"
}
